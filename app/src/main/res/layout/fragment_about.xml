<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:id="@+id/school_Image"/>

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schoolSmallInfo"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginHorizontal="@dimen/text_margin"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_size"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textColor"
            android:fontFamily="@font/latolight"/>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:src="@drawable/ic_baseline_label_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin"
                android:padding="2dp"
                android:text="Pleasant Environment with Green"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:src="@drawable/ic_baseline_label_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="@dimen/text_margin"
                android:text="Neat and Clean classroom"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:src="@drawable/ic_baseline_label_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="@dimen/text_margin"
                android:text="Polite, Punctual and Skillful Teachers"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:src="@drawable/ic_baseline_label_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="@dimen/text_margin"
                android:text="Library and Laboratory facilities"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:src="@drawable/ic_baseline_label_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="@dimen/text_margin"
                android:text="Hostel facility"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:src="@drawable/ic_baseline_label_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="@dimen/text_margin"
                android:text="Strong Security System"/>

        </LinearLayout>



        <TextView

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Department"
            android:background="@color/darkColor"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/title_size"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/latobold"/>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:foregroundGravity="center"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:id="@+id/viewPager"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/darkColor"
                android:text="Contact Details"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/title_size"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/latobold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naogaon K.D. Govt. High School"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:textColor="@color/textColor"
                android:fontFamily="@font/latolight"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kachari Road, Khash Naogaon"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:textColor="@color/textColor"
                android:fontFamily="@font/latolight"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naogaon, Bangladesh"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:textColor="@color/textColor"
                android:fontFamily="@font/latolight"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EIIN Number: 123420"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:textColor="@color/textColor"
                android:fontFamily="@font/latolight"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone-no: 0741-62887"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginBottom="2dp"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:textColor="@color/textColor"
                android:fontFamily="@font/latolight"/>

            <ImageView
                android:id="@+id/map1"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:padding="15dp"
                android:src="@drawable/map"
                android:scaleType="fitXY"/>


        </LinearLayout>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>